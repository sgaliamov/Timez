	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title></title>
	<style type="text/css">
		*
		{
			padding: 0px;
			margin: 0px;
			border: 0px none;
			font-family: Verdana, Arial;
			font-size: 12px;
			outline: 0px none;
			border-collapse: collapse;
			line-height: 16px;
		}
		
		html
		{
			height: 100%;
			background: #fff;
			overflow-y: scroll;
		}
		
		body
		{
			height: 100%;
			min-height: 100%;
		}
		
		.info
		{
			background: url(../../Content/info.png) no-repeat center center transparent;
			width: 32px;
			height: 32px;
			text-indent: -9999px;
		}
		.info:hover
		{
			background-color: #66B3FF;
			cursor: pointer;
		}
	</style>
</head>
<body>
	<div style="margin: 100px auto; width: 500px;">
		<form>
			<input type="submit" value="Save" name="Save" class="info" />
			<button type="submit"><img src="../../Content/"/></button>
		</form>
	</div>
</body>
</html>
